<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <% if user_signed_in? %>
      <p>
        <%= link_to t('views.common.title_index', name: Book.model_name.human), books_path %> |
        <%= link_to t('views.common.title_index', name: User.model_name.human), users_path %> |
        <%= link_to t('activerecord.devise.sessions.new.sign_out'), destroy_user_session_path, data: { turbo_method: :delete } %>
      </p>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
